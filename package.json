{
  "name": "shopper-ave",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSE",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "kill-ports": "kill-port 4000 3000",
    "run:client": "yarn workspace client dev",
    "run:server": "yarn workspace server dev"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "husky": "^8.0.3",
    "kill-port": "^2.0.1",
    "lint-staged": "^13.1.2",
    "prettier": "2.8.4",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@3.4.1",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
